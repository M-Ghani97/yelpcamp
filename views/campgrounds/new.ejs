<% include ../partials/header %>

<div class="container mt-4">
        <h1 style="text-align: center">Create a New Campground</h1>
    <div class="row">
    <div style="margin: 15px auto; width: 30%;">
        <div>
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Enter Name">
                </div>
                <div class="form-group">
                        <input type="text" class="form-control" name="image" placeholder="Enter Image Url">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="desc" placeholder="Enter Description">
                </div>
                <button type="submit" class="btn btm-lg btn-block btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>  
</div>


