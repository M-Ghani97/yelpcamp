<% include ../partials/header %>

<style>
    .fit-image{
    width: 100%;
    object-fit: cover;
    height: 70%;
    /* min-height: 70%;
    max-height: 70%; only if you want fixed height */
    }
    .fit-content{
    width: 100%;
    height: 100%; /* only if you want fixed height */
    }
    .fit-continer{
        width: 285px;
        height: 264.46px;
    }
</style>

<div class="container">
    <header class="jumbotron">
        <div>
            <h1>Welcome to YelpCamp Page</h1>
            <p>Campgounds From All Over the World</p>
            <p><a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campgound</a></p>
        </div>
    </header>
    <div class="row text-center">
        <% campgrounds.forEach(campgrounds => { %>
            <div class="fit-continer col-lg-3 col-md-4 col-sm-6 col-12 mb-4">
                <div class="fit-content img-thumbnail">
                    <!-- <figure class="fit-image imghvr-fade">
                            <figcaption>
                                <p><%= campgrounds.desc %></p>
                            </figcaption>
                    </figure> -->
                    <img class="fit-image" src="<%= campgrounds.image %>" alt="No Image">
                    <div class="caption">
                        <h5><%= campgrounds.name %></h5>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campgrounds._id %>" class="btn btn-sm btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>          
</div>



<% include ../partials/footer %>