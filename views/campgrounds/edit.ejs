<% include ../partials/header %>


<div class="container mt-4">
        <h1 style="text-align: center">Create a New Campground</h1>
    <div class="row">
    <div style="margin: 15px auto; width: 30%;">
        <div>
            <form action="/campgrounds/<%=campground.id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="campground[name]" placeholder="Enter Name" value="<%=campground.name%>">
                </div>
                <div class="form-group">
                        <input type="text" class="form-control" name="campground[image]" placeholder="Enter Image Url" value="<%=campground.image%>">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="campground[desc]" placeholder="Enter Description" value="<%=campground.desc%>">
                </div>
                <button type="submit" class="btn btm-lg btn-block btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>  
</div>


<% include ../partials/footer %>