<div class="container mt-4">
        <h1 style="text-align: center">Add a New Comment to <%= campground.name %> </h1>
    <div class="row">
    <div style="margin: 15px auto; width: 30%;">
        <div>
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="comment[text]" placeholder="Enter Comments">
                </div>
                <button type="submit" class="btn btm-lg btn-block btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>  
</div>


